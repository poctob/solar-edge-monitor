# Azure Functions Configuration Sample
# Copy this file to .env for local development

# Azure Storage (use local development storage for local testing)
AzureWebJobsStorage=UseDevelopmentStorage=true

# Functions Runtime
FUNCTIONS_WORKER_RUNTIME=python

# SolarEdge API Configuration
ALERT_POWER_THRESHOLD=200
SOLAREDGE_BASE_URL=https://monitoringapi.solaredge.com/
SOLAREDGE_SITE_ID=your_site_id_here
SOLAREDGE_API_KEY=your_api_key_here

# SendGrid Email Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
TO_EMAIL=recipient@example.com
FROM_EMAIL=alerts@yourcompany.com

# Application Insights (optional for local development)
APPINSIGHTS_INSTRUMENTATIONKEY=your_instrumentation_key_here